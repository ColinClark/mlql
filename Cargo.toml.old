[package]
name = "mlql-rs"
version = "0.1.0"
edition = "2021"

[dependencies]
# Parser
pest = "2.7"
pest_derive = "2.7"

# Serialization / IR
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"

# Database
duckdb = { version = "1.1", features = ["bundled"] }

# Async runtime (for server)
tokio = { version = "1", features = ["full"], optional = true }
axum = { version = "0.7", optional = true }

# Error handling
thiserror = "2.0"
anyhow = "1.0"

# Logging
tracing = "0.1"
tracing-subscriber = { version = "0.3", features = ["env-filter"] }

# Utilities
chrono = { version = "0.4", features = ["serde"] }
uuid = { version = "1.0", features = ["v4", "serde"] }

[dev-dependencies]
criterion = "0.5"

[features]
default = []
server = ["tokio", "axum"]

[[example]]
name = "run_pipeline"
path = "examples/run_pipeline.rs"

[lib]
name = "mlql_rs"
path = "src/lib.rs"
